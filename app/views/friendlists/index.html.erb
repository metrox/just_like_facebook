<h1>Listing friendlists</h1>

<table>
  <tr>
    <th>Id user</th>
    <th>Id friend</th>
    <th>User approved</th>
    <th>Friend approved</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @friendlists.each do |friendlist| %>
  <tr>
    <td><%= friendlist.id_user %></td>
    <td><%= friendlist.id_friend %></td>
    <td><%= friendlist.user_approved %></td>
    <td><%= friendlist.friend_approved %></td>
    <td><%= link_to 'Show', friendlist %></td>
    <td><%= link_to 'Edit', edit_friendlist_path(friendlist) %></td>
    <td><%= link_to 'Destroy', friendlist, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

